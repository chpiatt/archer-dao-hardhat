{
  "scripts": {
    "hardhat": "npx hardhat node --no-deploy --show-accounts",
    "fork": "npx hardhat node --no-deploy --show-accounts --fork $FORK_URL --fork-block-number $FORK_BLOCK_NUMBER",
    "accounts": "npx hardhat accounts",
    "compile": "npx hardhat compile",
    "test": "export REPORT_GAS=false && npx hardhat test",
    "deploy": "npx hardhat deploy",
    "deploy:hardhat": "npx hardhat deploy --network hardhat",
    "deploy:local": "npx hardhat deploy --network localhost"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.0",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.0.29",
    "hardhat": "^2.0.8",
    "hardhat-deploy": "^0.7.0-beta.44",
    "hardhat-deploy-ethers": "^0.3.0-beta.7"
  }
}
